#include<bits/stdc++.h>
using namespace std;
#define int long long
#define endl "\n"

bool isLucky(int num) {
    return (num == 4 || num == 7);
}

signed main() 
{
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    int n;
    cin >> n;
 
    int luckyDigitCount = 0;
    while (n != 0) 
    {
        int d = n % 10;
        if (d == 4 || d == 7) 
        {
            luckyDigitCount++;
        }
        n /= 10;
    }
 
    if (isLucky(luckyDigitCount)) 
    {
        cout << "YES" << endl;
    }   
    else   
    {
        cout << "NO" << endl;
    }
 
    return 0;
}
